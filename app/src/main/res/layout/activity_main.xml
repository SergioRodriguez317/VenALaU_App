<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/venalau" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/borde">
                <!--Registro-->
                <LinearLayout
                    android:id="@+id/llregistro"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_icon_registro"
                        android:tint="#000000" />

                    <TextView
                        android:id="@+id/tvRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:text="Registro"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/borde">

                <!--Iniciar Sesión-->
                <LinearLayout
                    android:id="@+id/lliniciarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_icon_login"
                        android:tint="#000000" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:text="Iniciar Sesión"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                </LinearLayout>



            </LinearLayout>
            <!--Fin segunda columna-->
            <!--Tercera columna-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/borde">

                <LinearLayout
                    android:id="@+id/lleventos"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="OnClickBotonAdd"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_icon_eventos"
                        android:tint="#000000" />

                    <TextView
                        android:id="@+id/tvEventos"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:text="Eventos"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                </LinearLayout>


            </LinearLayout>
            <!--Fin tercera columna-->
            <!--Inicio Cuarta columna-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/borde">
                <!--Deportes-->
                <LinearLayout
                    android:id="@+id/lldeportes"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:onClick="OnClickBotonAdd"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_con_deportes"
                        android:tint="#000000" />

                    <TextView
                        android:id="@+id/tvDeportes"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:text="Deportes"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                </LinearLayout>



            </LinearLayout>
            <!--Fin cuarta columna-->
            <!--Inicio Quinta columna-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/borde">
                <!--Acerca de-->
                <LinearLayout
                    android:id="@+id/llabout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorWhite"
                        android:padding="8dp"
                        android:text="Acerca de"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>